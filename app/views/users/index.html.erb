<h1>Listing users</h1>

<table class='table'>
  <tr>
    <th>Name</th>
    <th>Action</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <td>
      <%= link_to 'Show', user %> |
      <%= link_to 'Edit', edit_user_path(user) %> |
      <%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %> |
    </td>
  </tr>
<% end %>
</table>
<% if current_user && current_user.is_admin? %>
<%= link_to 'New User', new_user_path %>
<% end %>
<br />
